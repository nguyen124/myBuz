{
  "hosting": [
    {
      "target": "m2meme",
      "public": "dist/architecture",
      "ignore": [
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/svc/items{,/**}",
          "function": "itemController"
        },
        {
          "source": "/svc/comments{,/**}",
          "function": "commentController"
        },
        {
          "source": "/svc/users{,/**}",
          "function": "userController"
        },
        {
          "source": "/svc/reports{,/**}",
          "function": "reportController"
        },
        {
          "source": "/svc/notifications{,/**}",
          "function": "notificationController"
        },
        {
          "source": "/svc/files{,/**}",
          "function": "fileController"
        },
        {
          "source": "/svc{,/**}",
          "function": "app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "m2meme-dev",
      "public": "dist/dev",
      "ignore": [
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/svc/items{,/**}",
          "function": "itemController"
        },
        {
          "source": "/svc/comments{,/**}",
          "function": "commentController"
        },
        {
          "source": "/svc/users{,/**}",
          "function": "userController"
        },
        {
          "source": "/svc/reports{,/**}",
          "function": "reportController"
        },
        {
          "source": "/svc/notifications{,/**}",
          "function": "notificationController"
        },
        {
          "source": "/svc/files{,/**}",
          "function": "fileController"
        },
        {
          "source": "/svc{,/**}",
          "function": "app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
